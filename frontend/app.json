{
  "expo": {
    "name": "QuickLink",
    "slug": "quicklink",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/quicklink-logo.png",
    "scheme": "quicklink",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#d3e2e8",
        "foregroundImage": "./assets/images/quicklink-logo.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "QuickLink uses your location to show how far potential climbing partners are from you."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/quicklink-logo.png",
          "imageWidth": 200,
          "backgroundColor": "#d3e2e8"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
